<Page x:Class="DE_EF.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DE_EF"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="LoginPage">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логин:" Margin="0,10,0,10" Width="200" Foreground="White"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Width="200"/>
            <TextBlock Text="Пароль:" Margin="0,10,0,10" Width="200" Foreground="White"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Width="200"/>
            <Button Content="Войти" Margin="0,50,0,20" HorizontalAlignment="Center" Width="100" Click="Login_Click"/>
            <Button Content="Регистрация" Width="100" HorizontalAlignment="Center" Click="Reg_Click"/>
        </StackPanel>
    </Grid>
</Page>
